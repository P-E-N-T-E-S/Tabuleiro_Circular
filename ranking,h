#include <stdio.h>
#include <stdlib.h>
#include "tabuleiro.h"


//Jogador *jogadores = (Jogador*)malloc(tamanho * sizeof(Jogador));

void troca(Jogador *a,Jogador *b){
  Jogador temp = *a;
  *a = *b;
  *b = temp;
}


void classificarJogadores(Jogador *jogadores, int tamanho) {
    for (int i = 0; i < tamanho - 1; i++) {
        int max_idx = i;
        for (int j = i + 1; j < tamanho; j++) {
            if (jogadores[j].pontuacao > jogadores[max_idx].pontuacao) {
                max_idx = j;
            }
        }
        
        troca(&jogadores[max_idx], &jogadores[i]);
    }
}

void adicionarPontuacao(Jogador *jogadores, int tamanho, int id, int pontuacao) {
    for (int i = 0; i < tamanho; i++) {
        if (jogadores[i].id == id) {
            jogadores[i].pontuacao += pontuacao;
            return;
        }
    }
}

void imprimirJogadores(Jogador *jogadores, int tamanho) {
    printf("Jogadores:\n");
    for (int i = 0; i < tamanho; i++) {
        printf("ID: %d | Nome: %s | Pontuacao: %d\n", jogadores[i].id, jogadores[i].nome, jogadores[i].pontuacao);
    }
}

void cadastrarJogadores(Jogador *jogadores, int tamanho) {
    for (int i = 0; i < tamanho; i++) {
        printf("Cadastro do Jogador %d:\n", i + 1);

        // Aloca memÃ³ria para o nome do jogador
        jogadores[i].nome = (char*)malloc(50 * sizeof(char));

        printf("Nome: ");
        scanf("%s", jogadores[i].nome);


        jogadores[i].id = i;
    }
}
